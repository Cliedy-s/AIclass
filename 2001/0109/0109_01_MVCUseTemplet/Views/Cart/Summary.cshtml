@model _0106GudiShop.Models.Cart

<!-- Notifications Menu -->
<li class="dropdown notifications-menu">
    <!-- Menu toggle button -->
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <i class="fa fa-shopping-cart"></i>
        <span class="label label-warning">
            @Model.Lines.Sum(x => x.Qty) 
        </span>
    </a>
    <ul class="dropdown-menu">
        <li class="header">Your Cart : @Model.Lines.Sum(x => x.Qty) item(s)</li>
        <li>
            <!-- Inner Menu: contains the notifications -->
            <ul class="menu">
                <li>
                    <!-- start notification -->
                    <a href="#">
                        <i class="fa fa-money text-green" aria-hidden="true"></i> @Model.ComputeTotalValue().ToString("c")
                    </a>
                </li>
                <!-- end notification -->
            </ul>
        </li>
        <li class="footer"><a href="/Cart/Index">View all</a></li>
    </ul>
</li>