@model _0106GudiShop.Models.Product

<div class="well">
    <h3>
        <strong>@Model.Name</strong>
        <span class="pull-right label label-primary">@Model.Price.ToString("c")</span>@*c=> 통화단위*@
    </h3>
    @using (Html.BeginForm("AddToCart", "Cart"))
    {
<div>
    @Html.HiddenFor(x => x.ProductID)
    @Html.Hidden("returnUrl", Request.Url.PathAndQuery) @*현재 전체 주소 가져옴*@
    <input type="submit" value="Add to Cart" class="pull-right btn btn-success" />
    &nbsp;
</div>
    }
    <span class="lead">@Model.Description</span>
</div>
