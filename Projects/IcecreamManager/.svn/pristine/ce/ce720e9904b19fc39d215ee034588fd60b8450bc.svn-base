        private void BtnSearch_Click(object sender, EventArgs e)
        {
            dgvAmountParent.DataSource = parentList;
            dgvAmountChild.DataSource = amountList;
            List<MaterialsVO> seParentList = new List<MaterialsVO>();
            List<AmountVO> seAmountList = new List<AmountVO>();
           
            //MessageBox.Show(amountList[0].total_each.ToString());
            
            if (numQuantity.Value < 1)
            {
                MessageBox.Show("개수를 지정해 주세요.");
                return;
            }

            int index = parentValues.Count;
            for (int i = 0; i < index; i++)
            {
                parentList[i].mat_Each += Convert.ToInt32(numQuantity.Value);
                parentList[i].mat_Cost *= Convert.ToInt32(numQuantity.Value);
            }
            seParentList = parentList.ToList();
            dgvAmountParent.DataSource = null;
            dgvAmountParent.DataSource = seParentList;

            index = amountList.Count;
            for (int i = 0; i < index; i++)
            {
                amountList[i].total_Cost *= Convert.ToInt32(numQuantity.Value);
                amountList[i].total_each *= Convert.ToInt32(numQuantity.Value);
            }
            seAmountList = amountList;
            dgvAmountChild.DataSource = null;
            dgvAmountChild.DataSource = seAmountList;

            

        }
